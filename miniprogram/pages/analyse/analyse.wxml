<!--index.wxml-->
<view class="container">
  <ec-canvas id="mychart-dom-line" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
</view>

<view class="section">
  <picker
    mode="date"
    value="{{date}}"
    start="2015-09-01"
    end="2020-09-01"
    bindchange="bindDateChange"
  >
    <view class="picker">
      当前选择日期: {{date}}
    </view>
  </picker>
</view>
