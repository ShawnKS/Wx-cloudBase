<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="page__bd">
    <view class="weui-grids">

      <view class="weui-grid" bindtap="navFavtap"  hover-class="weui-grid_active">
        <image class="weui-grid__icon" bindtap="navFavtap" src="/images/like_red.png" />
        <view class="weui-grid__label">我的收藏</view>
      </view>

      <view class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon_tabbar.png" />
        <view class="weui-grid__label">Grid</view>
      </view>

      <view class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon_tabbar.png" />
        <view class="weui-grid__label">Grid</view>
      </view>

      <view class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/images/icon_tabbar.png" />
        <view class="weui-grid__label">Grid</view>
      </view>
    </view>
  </view>
</view>